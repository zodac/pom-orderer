{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "out",
        "rootDir": "src",
        "lib": ["ESNext"],
        "types": ["node", "vscode", "mocha"],
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false
    },
    "include": ["src", "src/**/*.spec.ts"],
    "exclude": ["node_modules"]
}
