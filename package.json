{
    "name": "pom-orderer",
    "publisher": "net.zodac",
    "displayName": "POM Orderer",
    "description": "Order direct children of <project> in pom.xml according to a standard order on save",
    "icon": "images/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/zodac/pom-orderer"
    },
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.105.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onWillSaveTextDocument"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "pom-orderer.reorderPom",
                "title": "POM Orderer: Reorder pom.xml"
            }
        ],
        "languages": [
            {
                "id": "xml",
                "aliases": [
                    "XML"
                ],
                "extensions": [
                    ".xml"
                ]
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "lint": "eslint src",
        "package": "npx tsc && vsce package",
        "pretest": "npm run compile && npm run lint",
        "test": "tsc -p tsconfig.json && xvfb-run -a npx vscode-test --disable-gpu --no-sandbox 2>/dev/null",
        "vscode:prepublish": "npm run compile",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.105.0",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.36.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "fast-xml-parser": "^4.5.3"
    }
}
